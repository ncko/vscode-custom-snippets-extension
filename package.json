{
	"name": "custom-snippets",
	"displayName": "Custom Snippets",
	"description": "Easily create, edit and delete custom snippets",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Snippets"
	],
	"activationEvents": [
		"onCommand:extension.stubFromFile",
		"onCommand:extension.stubFromSelection",
		"onCommand:extension.stubtoSnippet",
		"onCommand:extension.snippetToStub",
		"onCommand:extension.removeSnippet"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.stubFromFile",
				"title": "New Snippet Stub from File"
			},
			{
				"command": "extension.stubFromSelection",
				"title": "New Snippet Stub from Selection"
			},
			{
				"command": "extension.stubToSnippet",
				"title": "Convert Stub to Snippet"
			},
			{
				"command": "extension.snippetToStub",
				"title": "Open Snippet as Stub"
			},
			{
				"command": "extension.removeSnippet",
				"title": "Remove a Snippet"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
